.side-bar
  .header
    .header__box
      .header__box__name
        = current_user.name
      .header__box__lists
        .list
          = link_to new_group_path do
            = fa_icon 'pencil-square-o', class: 'icon'
        .list
          = link_to "/users/#{current_user.id}/edit" do
            = fa_icon 'cog', class: 'icon'
  .groups
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group), class: "group__link" do
          .group__name
            = group.name
          .group__message
            = group.show_last_message
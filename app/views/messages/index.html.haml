.wrapper
  = render partial: "shared/side_bar"
  .messages
    .messages__header
      %h1.messages__header__group-name
        = @group.name
      %li.messages__header__members Member : user1 user2
      = link_to edit_group_path(@group) do
        .messages__header__edit Edit
    = render @messages

    .message-form
      = form_for [@group, @message] do |f|
        = f.text_field :text, placeholder: 'type a message', class: 'message-form__input'
        = f.submit 'Send', class: 'form__submit'
        = f.label :image, class: 'form__mask__image' do
          = fa_icon 'picture-o lg', class: 'icon'
          = f.file_field :image, class: 'hidden'
        
